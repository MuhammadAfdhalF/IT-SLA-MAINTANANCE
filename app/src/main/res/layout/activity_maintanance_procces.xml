<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reportList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/apk"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Maintanance Prosses" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardJudul">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1Prosses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/prosses"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtTibaDiLokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Tiba Di Lokasi"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img1Prosses"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pertanyaanLokasi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Apakah kamu sudah tiba di lokasi tempat kerusakan? \nJika belum, silahkan pergi"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img1Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/txtTibaDiLokasi" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSampai"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toEndOf="@+id/img1Prosses"
                    app:layout_constraintTop_toBottomOf="@id/pertanyaanLokasi">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Sampai"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </androidx.cardview.widget.CardView>

                <!--2-->
                <ImageView
                    android:id="@+id/img2Prosses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/prosses"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img1Prosses" />

                <TextView
                    android:id="@+id/txtMulaiTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Selesai atau Pending"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img2Prosses"
                    app:layout_constraintTop_toBottomOf="@id/img1Prosses" />

                <TextView
                    android:id="@+id/teksTimer"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pendingOrDone"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img2Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/txtMulaiTimer" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSelesaiMaintanance"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/abu"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toEndOf="@+id/img2Prosses"
                    app:layout_constraintTop_toBottomOf="@id/teksTimer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Selesai"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnPendingMaintanance"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toEndOf="@+id/btnSelesaiMaintanance"
                    app:layout_constraintTop_toBottomOf="@id/teksTimer">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Pending"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                </androidx.cardview.widget.CardView>

                <!--            Selesai         -->
                <ImageView
                    android:id="@+id/img4Prosses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/prosses"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img2Prosses" />

                <TextView
                    android:id="@+id/txtPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Laporan Pending"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img4Prosses"
                    app:layout_constraintTop_toBottomOf="@id/img2Prosses" />

                <TextView
                    android:id="@+id/teksPending"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Berikan alasan pending pada box dibawah ini"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img4Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/txtPending" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cardPending"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded2"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:hintEnabled="false"

                    app:layout_constraintStart_toEndOf="@+id/img4Prosses"
                    app:layout_constraintTop_toBottomOf="@id/teksPending">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/panggilDeskripsiPendingMaintanance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:hint="Deskrisikan Alasan Pending" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtKonfirmasiPending"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Jika alasan pending telah diisi, silahkan tekan tombol submit."
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img4Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/cardPending" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSubmitPending"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toEndOf="@+id/img4Prosses"
                    app:layout_constraintTop_toBottomOf="@id/txtKonfirmasiPending">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/garis1"
                    android:layout_width="300dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSubmitPending" />


                <!--            Selesai         -->
                <ImageView
                    android:id="@+id/img3Prosses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/prosses2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img4Prosses" />

                <TextView
                    android:id="@+id/txtSelesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Laporan"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@id/img4Prosses" />

                <TextView
                    android:id="@+id/teksSelesai"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Silahkan Upload foto perbaikan yang telah dilakukan"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/txtSelesai" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAddImage"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_constraintStart_toEndOf="@+id/img2Prosses"
                    app:layout_constraintTop_toBottomOf="@id/teksSelesai">

                    <ImageView
                        android:id="@+id/panggilFotoAkhir"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_add_24" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtLaporanMaintanance"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Tambahkan Laporan Kondisi AKhir(Wajib)"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/cardAddImage" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cardContent"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded2"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:hintEnabled="false"

                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@id/txtLaporanMaintanance">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/panggilKondisiAKhir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:hint="Deskripsikan Kondisi Akhir"
                        android:textColorHint="@color/teksBlur" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtBiaya"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Jika ada biaya perbaikan, silahkan diisi (Optional)"
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/cardContent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inpBiaya"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded2"
                    app:hintEnabled="false"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/txtBiaya"
                    app:startIconDrawable="@drawable/biaya">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/panggilBiaya"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded"
                        android:hint="Masukkan Biaya"
                        android:inputType="number"
                        android:textColorHint="@color/teksBlur" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--                -->
                <TextView
                    android:id="@+id/txtKonfirmasi"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Jika data telah diisi, silahkan tekan tombol submit."
                    android:textColor="@color/abu"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@+id/inpBiaya" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSubmitMaintanance"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toEndOf="@+id/img3Prosses"
                    app:layout_constraintTop_toBottomOf="@id/txtKonfirmasi">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </androidx.cardview.widget.CardView>


                <View
                    android:id="@+id/garis2"
                    android:layout_width="300dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSubmitMaintanance" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>