<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtIdListReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="ID :"
                android:textColor="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/panggilIdListReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="1"
                android:textColor="@color/blue"
                app:layout_constraintStart_toEndOf="@+id/txtIdListReport"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txtPelapor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Pelapor :"
                android:textColor="@color/blue"
                app:layout_constraintStart_toEndOf="@+id/panggilIdListReport"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/panggilPelapor"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="MUHAMMAD AFDHAL. F"
                android:textColor="@color/blue"
                app:layout_constraintStart_toEndOf="@+id/txtPelapor"
                app:layout_constraintTop_toTopOf="parent" />
            <!--Tanggal-->
            <TextView
                android:id="@+id/panggilTanggalReportList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="20 Maret 2023"
                android:textColor="@color/abu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            Lokasi       -->
            <TextView
                android:id="@+id/txtLokasiListReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Lokasi :"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIdListReport" />

            <TextView
                android:id="@+id/panggilLokasiListReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Parangloe"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLokasiListReport" />

            <!--            pesan       -->
            <TextView
                android:id="@+id/txtPesanListReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Catatan :"
                android:textColor="@color/blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/panggilLokasiListReport" />

            <TextView
                android:id="@+id/panggilCatatanListReport"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/content"
                android:textColor="@color/abu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPesanListReport" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatusReportList"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/panggilTanggalReportList">

                <TextView
                    android:id="@+id/panggilStatusReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Menunggu"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

<!--            view        -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPesanListReport"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/abu"
                    android:layout_gravity="center"
                    android:text="View"/>
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_navigate_next_24"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>